<Window x:Class="OnePageLimitScrollingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnePageLimitScrollingDemo"
        xmlns:comp="clr-namespace:OnePageLimitScrollingDemo.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Margin="14" BorderBrush="Gray" BorderThickness="1">
            <comp:OnePageLimitScrollViewer x:Name="scrollViewer">
                <StackPanel>
                    <Border x:Name="firstPage"
                            Height="{Binding ElementName=scrollViewer,Path=ActualHeight}"
                            Background="#33ff0000">
                        <Grid>
                            <Image/>
                            <Border Background="#88FFFFFF"
                                    CornerRadius="8"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <TextBlock Text=" First Page "
                                           Margin="14"/>
                            </Border>
                        </Grid>
                    </Border>
                    <StackPanel x:Name="otherElements">

                    </StackPanel>
                </StackPanel>
            </comp:OnePageLimitScrollViewer>
        </Border>
    </Grid>
</Window>
